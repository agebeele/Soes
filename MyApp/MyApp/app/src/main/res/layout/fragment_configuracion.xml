<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#448AFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuracion"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:translationX="10dp"
                android:translationY="10dp" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp">

            </SearchView>

            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="600dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguridad"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp"
                        android:translationY="10dp" />

                    <Button
                        android:id="@+id/miperfil"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Editar perfil"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:icon="@drawable/baseline_person_24"
                        app:iconTint="@color/black" />

                    <Button
                        android:id="@+id/btnAyuda"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Ayuda"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_call_24"
                        app:iconTint="@color/black" />

                    <Button
                        android:id="@+id/btnCambio"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Configurar perfil"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_key_24"
                        app:iconTint="@color/black" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permisos"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp" />

                    <Button
                        android:id="@+id/btn_location"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="UbicaciÃ³n"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_location_on_24"
                        app:iconTint="@color/black" />

                    <Button
                        android:id="@+id/btnNotificacion"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Notificaciones"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_notifications_active_24"
                        app:iconTint="@color/black" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp"/>

                    <Button
                        android:id="@+id/btnAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Lista de calentadores"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_android_24"
                        app:iconTint="@color/black" />

                    <Button
                        android:id="@+id/btnNosotros"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Acerca de nosotros"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_info_24"
                        app:iconTint="@color/black" />

                    <Button
                        android:id="@+id/BtnCerrarSesion"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:freezesText="false"
                        android:text="Cerrar Sesion"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:icon="@drawable/baseline_logout_24"
                        app:iconTint="@color/black" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>